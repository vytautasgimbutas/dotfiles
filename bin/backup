#!/bin/sh
DATE=$(date +"%y-%m-%d")

# Google Drive / Dropbox
TO="$HOME/Dropbox/"

# Backup projects directory
tar -czPf $HOME/projects.tar $HOME/Projects
rsync -az $HOME/projects.tar "$TO/backups/$DATE/"
rm $HOME/projects.tar

# Delete old ones (after 10 days)
find "$TO/backups/" -type d -mtime +10 | xargs rm -rf
