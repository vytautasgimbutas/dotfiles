[ui]
username = Vytautas Gimbutas
merge = diffmerge
diff = ksdiff
ignore = ~/.hgignore

[extensions]
# hgext.ftp = /usr/lib/hg/ftp.py
color =
hgext.purge = 
hgext.graphlog =
hgext.extdiff =

[defaults]
log = --limit 8
glog = --limit 4

[extdiff]
cmd.diffmerge = /usr/bin/diffmerge
cmd.ksdiff = /usr/local/bin/ksdiff-wrapper
opts.ksdiff = hg

[merge-tools]
diffmerge.executable = /usr/bin/diffmerge
diffmerge.args = -merge -result=$output -t1="Local Version" -t2=$output -t3="Other Version" -caption=$output $local $base $other
diffmerge.binary = False
diffmerge.symlinks = False
diffmerge.gui = True
